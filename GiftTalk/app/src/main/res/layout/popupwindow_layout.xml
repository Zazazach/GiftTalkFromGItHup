<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_pop_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_pop_pic"
            android:text="$79"
            android:layout_marginTop="1dp"
            android:textSize="20sp"
            android:textColor="@color/checked_red"
            android:layout_toRightOf="@id/iv_pop_pic"/>

        <TextView
            android:id="@+id/tv_pop_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="库存949件"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pop_pic"/>

        <TextView
            android:id="@+id/tv_pop__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="请选择 款式"
            android:layout_below="@id/tv_pop_"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_pop_pic"/>



        <ImageView
            android:id="@+id/iv_pop_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/abc_ic_clear_search_api_disabled_holo_light"
            android:layout_alignTop="@id/tv_pop"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
        <View

            android:layout_width="match_parent"
            android:layout_height="0.1dp"></View>

        <TextView
            android:id="@+id/tv_pop_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="款式"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pop_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_pop_type"
            android:layout_alignLeft="@id/tv_pop_type"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View

            android:layout_width="match_parent"
            android:layout_height="0.1dp"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:text="购买数量"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_pop_reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/btn_reduce_disabled"
            />

        <EditText
            android:id="@+id/tv_pop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pop_reduce"
            android:text="1"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            />

        <ImageView
            android:id="@+id/iv_pop_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_pop_num"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_increase_disabled"
            android:layout_marginLeft="8dp"/>

    </RelativeLayout>





</LinearLayout>