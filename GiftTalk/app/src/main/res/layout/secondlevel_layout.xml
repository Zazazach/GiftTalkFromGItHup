<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7">





        <android.support.v4.view.ViewPager
            android:id="@+id/vp_secondlevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        </android.support.v4.view.ViewPager>

        <RelativeLayout
            android:id="@+id/rl_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            >


            <ImageView
                android:id="@+id/tv_secondlevel_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back_grey"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_secondlevel"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"

                />


            <ImageView
                android:id="@+id/iv_secondlevel_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_compact_share"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                />



        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_secondlevel_favourite"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ic_action_item_favourite_normal"
            android:text="喜欢"
            android:gravity="center"
            android:paddingTop="5dp"
            android:drawablePadding="1dp"
            android:textSize="12.5sp"
           />

        <TextView
            android:id="@+id/tv_secondlevel_share"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ic_action_compact_share"
            android:text="分享"
            android:gravity="center"
            android:paddingTop="5dp"
            android:drawablePadding="2.2dp"
            android:textSize="12.5sp"
            />

        <TextView
            android:id="@+id/tv_secondlevel_taobao"
            android:layout_width="0dp"
            android:layout_weight="5.5"
            android:layout_height="match_parent"
            android:text="去淘宝购买"
            android:background="#ff2d47"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="#fafafa"
            android:textSize="15sp"
            />


    </LinearLayout>
</LinearLayout>