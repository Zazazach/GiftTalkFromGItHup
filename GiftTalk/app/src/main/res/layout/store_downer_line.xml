<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_storedowner_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.8"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_storedowner_top"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="TOP1"
            android:background="#ffe2e2"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#ff2d47"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_storedowner_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="555sssssssssssss"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="#352121"
            android:ellipsize="marquee"
            android:singleLine="true"
            />
        
    </LinearLayout>

    <TextView
        android:id="@+id/tv_storedowner_shortdescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="saaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:gravity="center_vertical"
        android:textColor="#b3aaaa"
        android:layout_margin="5dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        >

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥ "
            android:textColor="#ff4258"/>

        <TextView
            android:id="@+id/tv_storedowner_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv"
            android:text="555"
            android:textColor="#ff4258"
            />
    </RelativeLayout>



</LinearLayout>