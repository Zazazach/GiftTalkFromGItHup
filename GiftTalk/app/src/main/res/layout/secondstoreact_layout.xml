<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_secstore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/iv_secstore_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_sticky_to_top"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="13dp"
                android:visibility="invisible"/>


        </RelativeLayout>






        <RelativeLayout
            android:id="@+id/rl_secstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:alpha="0"

            >


            <ImageView
                android:id="@+id/iv_secstore_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back_grey"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/tv_secstore"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"

                android:layout_marginBottom="15dp"
                android:text="礼物详情"
                android:gravity="center"
                android:layout_centerInParent="true"
                />


            <ImageView
                android:id="@+id/iv_secstore_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_cart_black"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                />



        </RelativeLayout>
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_secstore_favourite"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ic_action_item_favourite_normal"
            android:text="喜欢"
            android:gravity="center"
            android:paddingTop="5dp"
            android:drawablePadding="1dp"
            android:textSize="12.5sp"
            />

        <TextView
            android:id="@+id/tv_secstore_share"
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/ic_action_compact_share"
            android:text="分享"
            android:gravity="center"
            android:paddingTop="5dp"
            android:drawablePadding="2.2dp"
            android:textSize="12.5sp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:background="#f88"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="#fafafa"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_secstore_instance"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:text="立刻购买"
            android:background="#ff2d47"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="#fafafa"
            android:textSize="14sp"
            />


    </LinearLayout>
</LinearLayout>