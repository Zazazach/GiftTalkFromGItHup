<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageView
            android:id="@+id/iv_detail_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back_grey"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="攻略详情"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_detail_home_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看全集"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp"/>
    </RelativeLayout>


        <com.handmark.pulltorefresh.library.PullToRefreshWebView
            android:id="@+id/pull_webview_detail_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >

        </com.handmark.pulltorefresh.library.PullToRefreshWebView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/tv_detail_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_action_compact_favourite_normal"
            android:layout_centerVertical="true"
            android:text="726"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_detail_home_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_share_black"
            android:drawablePadding="5dp"
            android:layout_centerInParent="true"
            android:text="307"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_detail_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/ic_action_item_comment"
            android:drawablePadding="5dp"
            android:layout_centerInParent="true"
            android:text="151"
            android:textSize="16sp"
            android:layout_margin="10dp"/>

    </RelativeLayout>



</LinearLayout>